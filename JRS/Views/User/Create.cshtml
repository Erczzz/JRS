@model CreateUserViewModel

<h1>Create</h1>

<h4>User</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NewUser.FirstName" class="control-label"></label>
                <input asp-for="NewUser.FirstName" class="form-control" />
                <span asp-validation-for="NewUser.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewUser.LastName" class="control-label"></label>
                <input asp-for="NewUser.LastName" class="form-control" />
                <span asp-validation-for="NewUser.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewUser.Birthdate" class="control-label"></label>
                <input asp-for="NewUser.Birthdate" class="form-control" />
                <span asp-validation-for="NewUser.Birthdate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewUser.ContactNo" class="control-label"></label>
                <input asp-for="NewUser.ContactNo" class="form-control" />
                <span asp-validation-for="NewUser.ContactNo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="NewUser.Email" class="control-label"></label>
                <input asp-for="NewUser.Email" class="form-control" />
                <span asp-validation-for="NewUser.Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="NewUser.Address" class="control-label"></label>
                <input asp-for="NewUser.Address" class="form-control" />
                <span asp-validation-for="NewUser.Address" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="NewUser.Username" class="control-label"></label>
                <input asp-for="NewUser.Username" class="form-control" />
                <span asp-validation-for="NewUser.Username" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="NewUser.Password" class="control-label"></label>
                <input asp-for="NewUser.Password" class="form-control" />
                <span asp-validation-for="NewUser.Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="NewUser.ConfirmPassword" class="control-label"></label>
                <input asp-for="NewUser.ConfirmPassword" class="form-control" />
                <span asp-validation-for="NewUser.ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="NewUser.RoleId" class="control-label"></label>
                <select asp-for="NewUser.RoleId" class="form-control">
                    @foreach (var role in Model.Roles)
                    {
                        <option value="@role.RoleId">@role.RoleName</option>
                    }
                </select> <br />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="GetAllUsers">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
